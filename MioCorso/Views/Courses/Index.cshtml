@using System.Collections.Generic
@using MioCorso.Models.ViewModels

@model List<CoursesViewModel>

<h1>Elenco Corsi</h1>

@foreach(CoursesViewModel cs in Model)     
{
 <div class="row">
   <div class="col-md-1">
    <img src=@cs.ImagePath width="50">
   </div>
   <div class="col-md-5">
    <h2>@cs.Title</h2>
    <author>@cs.Author</author>
   </div>
    <div class="col-md-2 rating" title="@cs.Rating">     <!-- rating = classe foglio style -->
     
     @for(int i = 1 ; i <= 5 ; i ++) 
     {
       if(cs.Rating >= i)
       {
        <i class="fas fa-star"></i>
       }
        else if(cs.Rating > i - 1)
        {
          <i class="fas fa-star-half-alt"></i>
        }
         else
         {
           <i class="far fa-star"></i>
         }
     }
   </div>
   <div class="col-md-2 price">    <!-- price = classe foglio style -->
     @cs.CurrentPrice 
     @if(!(cs.FullPrice.Equals(cs.CurrentPrice)))
     {
       <s> @cs.FullPrice</s>  
     }  
   </div>
   <div class="col-md-2 d-flex aling-items-flex">  <!-- d-flex aling-items-flex = classe foglio style -->
    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@cs.Id">Dettagli corso NÂ°@cs.Id</a>
   </div>
 </div>
}